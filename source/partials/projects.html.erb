<div class="row mt-5">
  <div class="col-12">
    <div class="container">
      <div id="projects" class="mx-0.5">
        <h2 class="text font-extrabold text-4xl mb-2"> Projects</h2>
        <div class="cards">
          <% data.projects.each do |project| %>
            <div class="mt-2 max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
              <a href="<%= project.url %>" target="_blank">
                <%= image_tag project.image, class: "rounded-t-lg", alt: "project image" %>
              </a>
              <div class="p-4 card-text">
                <a href="<%= project.url %>" target="_blank" >
                  <h5 class="mb-2 text-2xl font-bold tracking-tight text"><%= project.name %></h5>
                </a>
                <p class="mb-3 font-normal"><%= project.description %></p>
                <a href="<%= project.url %>" target="_blank" class="project-button inline-flex items-center me-0.5 px-3 py-2 text-sm font-medium text-center text-white rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                  View site
                  <svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </a>
                <a href="<%= project.github %>" target="_blank" class="project-button inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                  Github
                  <svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </a>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
