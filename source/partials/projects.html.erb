<div class="row mt-5">
  <div class="col-12">
    <div class="container">
      <div id="projects" class="mx-0.5">
        <h2 class="text font-extrabold text-4xl mb-4"> Dev Projects</h2>
        <div class="card-container flex justify-content-center">
          <div class="cards">
            <% data.projects.each do |project| %>
              <div class="card bg-project border-0" style="width: 24rem;">
                <a href="<%= project.url %>" target="_blank">
                  <%= image_tag project.image, class: "card-img-top rounded-0", alt: "project image" %>
                </a>
                <div class="card-body p-4">
                  <a href="<%= project.url %>" target="_blank" >
                    <h5 class="text h4"><%= project.name %></h5>
                  </a>
                  <p class="card-text"><%= project.description %></p>
                  <a href="<%= project.url %>" target="_blank" class="btn project-button text-white mt-3 me-1">
                    Demo<svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1 d-inline" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                  </a>
                  <a href="<%= project.github %>" target="_blank" class="btn project-button text-white mt-3">
                    Github<svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1 d-inline" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                  </a>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
